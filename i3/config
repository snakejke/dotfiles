bindsym $mod+Return exec alacritty
# kill focused window
bindsym $mod+Shift+q kill
bindsym --release $mod+Ctrl+4 exec --no-startup-id "maim -s > ~/Documents/Pictures/Screenshots/`date +%Y-%m-%d_%H-%M-%S`.jpg"
#bindsym $mod+d exec "rofi -modi drun,run -show drun"
