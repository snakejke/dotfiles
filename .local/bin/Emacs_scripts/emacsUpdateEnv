#!/bin/bash

# Определение пути к файлу
env_file="$HOME/.config/emacs/.local/env"

# Создание директории, если она не существует
mkdir -p "$(dirname "$env_file")"

# Запись всех переменных среды в файл
printenv > "$env_file"

# Проверка успешности выполнения предыдущей команды
if [ $? -eq 0 ]; then
    echo "Все переменные среды успешно сохранены в $env_file"
else
    echo "Ошибка при сохранении переменных среды" >&2
    exit 1
fi
