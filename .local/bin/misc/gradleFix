#!/bin/bash

# Проверяем, передан ли аргумент (имя файла)
if [ -z "$1" ]; then
  echo "Ошибка: Необходимо передать имя файла в качестве аргумента."
  exit 1
fi

# Присваиваем переменной имя файла
FILE=$1

# Проверяем, существует ли файл
if [ ! -f "$FILE" ]; then
  echo "Ошибка: Файл '$FILE' не существует."
  exit 1
fi

# Делаем файл исполняемым
chmod +x "$FILE"
echo "Файл '$FILE' сделан исполняемым."

# Обновляем индекс Git с измененными правами доступа
git update-index --chmod=+x "$FILE"
echo "Права доступа к файлу '$FILE' обновлены в Git."
