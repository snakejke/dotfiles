+ "$[gt.Page] (0,0)" MoveToPage 0 0
+ "$[gt.Page] (0,1)" MoveToPage 0 1
+ "$[gt.Page] (1,0)" MoveToPage 1 0
+ "$[gt.Page] (1,1)" MoveToPage 1 1


