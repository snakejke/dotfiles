# vim:ft=tmux
# Set default Xft(3) font
fontname "sans-serif:pixelsize=14:bold"
# Turn on sticky-group mode
sticky yes
snapdist 10
borderwidth 0
# color activeborder '#a82403'
# color inactiveborder '#1fdbc8'
#dex -a /etc/xdg/autostart/pipewire.desktop
gap 0 0 0 0 # tint 2 внизу отступ 0 40 0 0 px
# Меню приложений.
command alacritty       alacritty
command google          google-chrome-stable
command urxvt           urxvt


# Autogroup definitions
autogroup 0 "tint2,Tint2" # ?
autogroup 3 "aterm,XTerm"
autogroup 3 "xterm,XTerm"
autogroup 3 "jetbrains-idea", "jetbrains-idea"
# Ignore programs by that name by not drawing borders around them.
ignore tint2
#Unbind default keys
unbind-key all
unbind-key CMS-r # Restart CWM
unbind-key 4-o
unbind-key CM-equal
unbind-key CMS-equal
unbind-key CM-x # Close Window

# Key bindings for applications and scripts
bind-key 4-d        "rofi -show drun -c ~/.config/rofi/config.rasi"
bind-key 4C-4       maimscreenshot # Maim screenshot tool
bind-key 4-p        passmenutest   # Rofi + dmenu + PASS + pinentry
bind-key 4-Return   alacritty
#
bind-key CM-r       window-menu-label
bind-key C4-equal   window-vmaximize
bind-key C4S-equal  window-hmaximize
bind-key 4S-r       restart # перезагрузить конфиг
bind-key 4S-Escape  quit # закрыть cwm
bind-key 4S-q       window-close # закрыть окно
bind-key 4S-Right   window-snap-down-right # прилепить к нижнемю правому углу
bind-key 4-f        window-maximize # окно во весь экран с учетом gaps
bind-key 4-v        window-vtile
bind-key 4-h        window-htile
bind-key M-Tab      window-cycle-ingroup
bind-key 4S-Tab     window-cycle # не хочет с Alt работать
bind-key M-Right    group-cycle
# i3wm key binds style Win+Shift+n or Win+n
bind-key 4S-1 window-movetogroup-1
bind-key 4S-2 window-movetogroup-2
bind-key 4S-3 window-movetogroup-3
bind-key 4S-4 window-movetogroup-4
bind-key 4S-5 window-movetogroup-5
bind-key 4S-6 window-movetogroup-6
bind-key 4S-7 window-movetogroup-7
bind-key 4S-8 window-movetogroup-8
bind-key 4S-9 window-movetogroup-9

bind-key 4-1 group-only-1
bind-key 4-2 group-only-2
bind-key 4-3 group-only-3
bind-key 4-4 group-only-4
bind-key 4-5 group-only-5
bind-key 4-6 group-only-6
bind-key 4-7 group-only-7
bind-key 4-8 group-only-8
bind-key 4-9 group-only-9
#
bind-key M-1 group-toggle-1
bind-key M-2 group-toggle-2
bind-key M-3 group-toggle-3
bind-key M-4 group-toggle-4
bind-key M-5 group-toggle-5
bind-key M-6 group-toggle-6
bind-key M-7 group-toggle-7
bind-key M-0 group-toggle-all
# Mouse bindings
bind-mouse M-2      window-lower
bind-mouse M-3      window-resize
